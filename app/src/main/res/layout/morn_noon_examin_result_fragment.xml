<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="1px"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/middle_v_line"
        android:orientation="vertical"
        android:showDividers="middle"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:divider="@drawable/middle_h_line"
            android:orientation="horizontal"
            android:showDividers="middle"
            >

            <com.cicada.yuanxiaobao.common.font.MyFontTextView
                android:id="@id/date"
                style="@style/TextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2016/7/13"
                android:textSize="12sp"
                />

            <com.cicada.yuanxiaobao.common.font.MyFontTextView
                style="@style/TextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="晨检"
                android:textSize="12sp"
                />

            <com.cicada.yuanxiaobao.common.font.MyFontTextView
                style="@style/TextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="午检"
                android:textSize="12sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:divider="@drawable/middle_h_line"
            android:orientation="horizontal"
            android:showDividers="middle"
            >

            <com.cicada.yuanxiaobao.common.font.MyFontTextView
                style="@style/TextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="嘱托"
                android:textSize="12sp"
                />

            <com.cicada.yuanxiaobao.common.font.MyFontTextView
                android:id="@+id/entrust_morn"
                style="@style/TextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="12sp"
                />

            <com.cicada.yuanxiaobao.common.font.MyFontTextView
                android:id="@+id/entrust_noon"
                style="@style/TextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="12sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:divider="@drawable/middle_h_line"
            android:orientation="horizontal"
            android:showDividers="middle"
            >

            <com.cicada.yuanxiaobao.common.font.MyFontTextView
                style="@style/TextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="是否入园"
                android:textSize="12sp"
                />

            <com.cicada.yuanxiaobao.common.font.MyFontTextView
                android:id="@+id/isEnterSchool_mron"
                style="@style/TextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="12sp"
                />

            <com.cicada.yuanxiaobao.common.font.MyFontTextView
                android:id="@+id/isEnterSchool_noon"
                style="@style/TextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="12sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:divider="@drawable/middle_h_line"
            android:orientation="horizontal"
            android:showDividers="middle"
            >

            <com.cicada.yuanxiaobao.common.font.MyFontTextView
                style="@style/TextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="症状"
                android:textSize="12sp"
                />

            <com.cicada.yuanxiaobao.common.font.MyFontTextView
                android:id="@+id/symptom_morn"
                style="@style/TextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="12sp"
                />

            <com.cicada.yuanxiaobao.common.font.MyFontTextView
                android:id="@+id/symptom_noon"
                style="@style/TextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="12sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:divider="@drawable/middle_h_line"
            android:orientation="horizontal"
            android:showDividers="middle"
            >

            <com.cicada.yuanxiaobao.common.font.MyFontTextView
                style="@style/TextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="照片"
                android:textSize="12sp"
                />


            <com.cicada.yuanxiaobao.common.widget.MyGridView
                android:id="@+id/pictures_mron_grid"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:numColumns="4"
                android:horizontalSpacing="5dp"
                android:padding="10dp"
                >

            </com.cicada.yuanxiaobao.common.widget.MyGridView>

            <com.cicada.yuanxiaobao.common.widget.MyGridView
                android:id="@+id/pictures_noon_grid"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:numColumns="4"
                android:horizontalSpacing="5dp"
                android:padding="10dp"
                >

            </com.cicada.yuanxiaobao.common.widget.MyGridView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/middle_h_line"
            android:orientation="horizontal"
            android:showDividers="middle"
            >

            <com.cicada.yuanxiaobao.common.font.MyFontTextView
                style="@style/TextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="备注"
                android:textSize="12sp"
                />

            <com.cicada.yuanxiaobao.common.font.MyFontTextView
                android:id="@+id/comment_morn"
                style="@style/TextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:minHeight="40dp"
                android:layout_weight="3"
                android:textSize="12sp"
                />

            <com.cicada.yuanxiaobao.common.font.MyFontTextView
                android:id="@+id/comment_noon"
                style="@style/TextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:minHeight="40dp"
                android:layout_weight="3"
                android:textSize="12sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:divider="@drawable/middle_h_line"
            android:orientation="horizontal"
            android:showDividers="middle"
            >

            <com.cicada.yuanxiaobao.common.font.MyFontTextView
                style="@style/TextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="记录人"
                android:textSize="12sp"
                />

            <com.cicada.yuanxiaobao.common.font.MyFontTextView
                android:id="@+id/recorderName_morn"
                style="@style/TextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="12sp"
                />

            <com.cicada.yuanxiaobao.common.font.MyFontTextView
                android:id="@+id/recorderName_noon"
                style="@style/TextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="12sp"
                />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
