<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/middle_v_line"
        android:orientation="vertical"
        android:showDividers="middle"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="78dp"
            android:divider="@drawable/middle_h_line"
            android:showDividers="middle"
            >

            <com.cicada.yuanxiaobao.common.font.MyFontTextView
                style="@style/TextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center"
                android:text="过敏源"
                android:textSize="12sp"
                />

            <com.cicada.yuanxiaobao.common.font.MyFontEditText
                android:id="@+id/allergen"
                style="@style/TextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/list_bg"
                android:textSize="12sp"
                android:padding="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/middle_h_line"
            android:minHeight="78dp"
            android:showDividers="middle"
            >

            <com.cicada.yuanxiaobao.common.font.MyFontTextView
                style="@style/TextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center"
                android:text="传染病记录"
                android:textSize="12sp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <com.cicada.yuanxiaobao.common.widget.MyListView
                    android:id="@+id/list_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/add"
                    android:listSelector="@android:color/transparent"
                    android:layout_margin="10dp"
                    >

                </com.cicada.yuanxiaobao.common.widget.MyListView>

                <com.cicada.yuanxiaobao.common.font.MyFontTextView
                    android:id="@+id/add"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bt_in_enable_bg"
                    android:gravity="center"
                    android:text="添加"
                    android:textColor="@android:color/white"
                    />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="78dp"
            android:divider="@drawable/middle_h_line"
            android:showDividers="middle"
            >

            <com.cicada.yuanxiaobao.common.font.MyFontTextView
                style="@style/TextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center"
                android:text="特别情况"
                android:textSize="12sp"
                />

            <com.cicada.yuanxiaobao.common.font.MyFontEditText
                android:id="@+id/remark"
                style="@style/TextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/list_bg"
                android:textSize="12sp"
                android:padding="10dp"
                />
        </LinearLayout>

        <com.cicada.yuanxiaobao.common.font.MyFontTextView
            android:id="@+id/save"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bt_in_enable_bg"
            android:gravity="center"
            android:text="保存"
            android:textColor="@android:color/white"
            />
    </LinearLayout>
</ScrollView>