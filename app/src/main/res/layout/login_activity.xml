<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login_bg"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logo"
            android:layout_marginBottom="70dp"
            android:layout_gravity="center_horizontal"
            />

        <com.cicada.yuanxiaobao.common.font.MyFontEditText
            android:id="@+id/phone"
            android:layout_width="318dp"
            android:layout_height="48dp"
            android:background="@drawable/et_bg"
            android:hint="请输入手机号码"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColorHint="#FF9B9B9B"
            android:inputType="phone"
            android:textSize="14sp"
            />

        <com.cicada.yuanxiaobao.common.font.MyFontEditText
            android:id="@+id/pwd"
            android:layout_width="318dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/et_bg"
            android:hint="请输入密码"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColorHint="#FF9B9B9B"
            android:singleLine="true"
            android:textSize="14sp"
            android:inputType="numberPassword"
            />

        <com.cicada.yuanxiaobao.common.font.MyFontTextView
            android:id="@+id/find_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:text="找回密码"
            android:textColor="@android:color/white"
            android:visibility="invisible"
            />

        <com.cicada.yuanxiaobao.common.font.MyFontTextView
            android:id="@+id/login"
            android:layout_width="318dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bt_login_selector"
            android:gravity="center"
            android:text="登录"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            />
    </LinearLayout>

    <com.cicada.yuanxiaobao.common.font.MyFontTextView
        android:id="@+id/versionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/service_phone"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        />

    <com.cicada.yuanxiaobao.common.font.MyFontTextView
        android:id="@+id/service_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:text="服务电话 400-123456"
        android:textColor="@android:color/white"
        android:visibility="invisible"
        />
</RelativeLayout>
